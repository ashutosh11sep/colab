    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>   
      </p>
 
     <p>
        <%= f.label :descrption %><br>
        <%= f.text_area :descrption %>
    </p>
 
   <p>
     <%= f.submit %>
    </p>
  <% end %>
  